{% extends "layouts/adminLayout.html.twig" %}

{% block title %} Admin Panel {% endblock %}

{% block content %}

    <div class="container">
        <div class="row">
            {% include 'partials/admin/sidebar.html.twig' %}

            <div class="col-md-9">
                <div class="card">
                    <div class="card-header">Create New Category</div>
                    <div class="card-block">
                        <a href="/admin/categories" title="Back">
                            <button class="btn btn-warning btn-sm"><i class="fa fa-arrow-left" aria-hidden="true"></i>
                                Back
                            </button>
                        </a>
                        <br/>
                        <br/>

                        <form method="POST" action="/admin/categories/create" class="form-horizontal">

                            {% include '/partials/admin/categoryForm.html.twig' %}

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
